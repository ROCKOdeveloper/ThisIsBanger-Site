---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
---

<Layout title="Error 404">
  <section class="bg-black w-screen h-screen cursor-default">
    <Header />
    <div class="m-auto h-3/4">
      <div class="m-auto flex">
        <span
          class="material-symbols-outlined mx-auto block  justify-items-center text-7xl"
        >
          warning
        </span>
      </div>
      <div class="px-6 py-12 backdrop-blur-xl text-white text-center">
        <h1 class="text-2xl font-bold mb-4">Error 404</h1>
        <p class="text-xl">El sitio que buscas, no est√° disponible.</p>
      </div>
      <div class="flex mx-auto justify-center">
        <button
          type="button"
          class="inline-block px-4 py-2 backdrop-blur-lg rounded-2xl duration-500 ease-out delay-75 hover:scale-105 hover:border-b-4 hover:-translate-y-2"
          ><a href="/">Volver al inicio</a>
        </button>
      </div>
    </div>
    <Footer class="" />
  </section>
</Layout>

<style>
  html {
    font-family: system-ui, sans-serif;
    background-color: #000000;
    color: #f1f1f1;
  }
  ::-webkit-scrollbar {
    display: none;
  }
  .material-symbols-outlined {
  font-variation-settings:
  'FILL' 0,
  'wght' 400,
  'GRAD' 0,
  'opsz' 48
}
</style>
